<!ELEMENT telefono (#PCDATA)>
<!ATTLIST telefono tipo (fijo|movil) #REQUIRED>
<!ELEMENT productos (producto+)>
<!ELEMENT producto (nombre,descProducto,precioUnitarioProd)>
